@model ICollection<Application.Models.Service>
@{ ViewBag.Title = "Home Page"; }

<div class="container mt-5 p-3">
    
    
    @if (Model.Count() == 0)
    {
        <center>
            <h5 class="text-info">No services to display</h5>
        </center>
    }
    else
    {
        <div class="row">
        @foreach (var service in Model.ToList())
         {
             <div class="col-md-4">
                 <div class="card" style="width: 18rem;min-height: 300px;min-height: 300px">
                     <img class="card-img-top" width="286" height="150" src="https://via.placeholder.com/286x150" alt="@service.Name">
                     <div class="card-body">
                         <h5 class="card-title">@service.Name</h5>
                         <p class="card-text">Price: @service.Price lei</p>
                         <a href="@Url.Action("View", "Service", new { id = service.Id })" class="btn btn-primary">Details</a>
                     </div>
                 </div>
             </div>
            }
        </div>
    }

</div>
