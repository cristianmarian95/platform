@model Application.Models.ServiceListModel
@{
    ViewBag.Title = "Service Page";
}
<div class="container">
    <div class="row justify-content-center mt-5 ">
        <div class="col-12">
            @Html.Partial("_Alerts")

            <a href="Service/Create" class="btn btn-info">Creaza Serviciu</a>

            @foreach (var service in @Model.Services)
            {
                <div class="alert alert-primary mt-3" role="alert">
                    <a href="Service/Delete/@service.Id">Delete</a>
                    <a style="margin-left: 20px;" href="Service/Edit/@service.Id">@service.Name</a>
                </div>
            }
        </div>

    </div>
</div>