@model Application.Models.TicketListModel
@{
    ViewBag.Title = "Ticket List";
}

<div class="container mt-5 p-3 border rounded bg-light">
    <h4>My Tickets</h4>
    @Html.Partial("_Alerts")

    <a href="Ticket/Create" class="btn btn-info mb-5">Creaza Ticket</a>
    
    @if (Model.Ticktes.Count == 0)
    {
        <center>
            <h5 class="text-info">No tickets to display</h5>
        </center>
    }
    else
    {
        <table class="table table-striped border rounded">
            <thead>
                <tr>
                    <th>Ticket</th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ticket in @Model.Ticktes)
                {
                <tr>
                    <td>@ticket.Title</td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td>
                        @if (!ticket.IsClosed)
                        {
                            <span class="badge badge-success">Open</span>
                        }
                        else
                        {
                            <span class="badge badge-danger">Close</span>
                        }
                    </td>
                    <td>
                        <a class="btn btn-sm btn-info" href="@Url.Action("View", "Ticket", new { id = ticket.Id})">View</a>
                        <a class="btn btn-sm btn-danger" href="@Url.Action("CloseTicket", "Ticket", new { idTicket = ticket.Id})">Close</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    
</div>