@model Application.Models.CategoryListModel
@{
    ViewBag.Title = "Category";
}
<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-12">
            @Html.Partial("_Alerts")

            <a href="Category/Create" class="btn btn-info">Creaza Categorie</a>

            @foreach (var category in @Model.Categories)
            {
                <div class="alert alert-success mt-3" role="alert">
                    <a href="Category/Delete/@category.Id">Delete</a>
                    <a style="margin-left: 20px;" href="Category/Edit/@category.Id">@category.Name</a>
                </div>
            }
        </div>
        
    </div>
</div>


